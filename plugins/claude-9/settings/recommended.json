{
  "_comments": {
    "hooks": "Hooks are provided by the claude-9 plugin. Remove any hook entries from your settings.json to avoid double-execution.",
    "enabledPlugins": "Plugin list is machine-specific. Enable plugins via: claude plugin install <name>",
    "usage": "This is a reference template. Copy relevant sections to ~/.claude/settings.json."
  },
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "DISABLE_BUG_COMMAND": "1"
  },
  "permissions": {
    "allow": [
      "Bash(awk *)",
      "Bash(cat *)",
      "Bash(cp *)",
      "Bash(du *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(head *)",
      "Bash(jq *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(source *)",
      "Bash(tail *)",
      "Bash(test *)",
      "Bash(tree *)",
      "Bash(wc *)",
      "Bash(grep *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(gh label list *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh release list *)",
      "Bash(gh repo view *)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh api *)",
      "Bash(git blame *)",
      "Bash(git branch *)",
      "Bash(git config --get *)",
      "Bash(git describe *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git for-each-ref *)",
      "Bash(git log *)",
      "Bash(git ls-files *)",
      "Bash(git ls-tree *)",
      "Bash(git merge-base *)",
      "Bash(git reflog *)",
      "Bash(git remote *)",
      "Bash(git rev-parse *)",
      "Bash(git shortlog *)",
      "Bash(git show *)",
      "Bash(git stash list *)",
      "Bash(git status *)",
      "Bash(git tag *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git init *)"
    ],
    "defaultMode": "default"
  },
  "sandbox": {
    "enabled": true,
    "excludedCommands": [
      "docker",
      "git"
    ]
  }
}
